.search_input {
  margin: 30rpx 0;
  padding: 30rpx 0;
  text-align: center;
  background-color: #eaeaea;
}

.text_question, .text_title {
  margin: 40rpx 0 0 0;
  padding: 0 20rpx;
  font-size: 36rpx;
  font-weight: medium;
  color: #000;
  text-align: center;
}

.text_answer, .text_effect {
  display: flex;
  align-items: center;
  min-height: 50rpx;
  font-size: 32rpx;
  padding: 0 30rpx;
  color: #000;
  text-align: left;
  margin-top: 50rpx;
}

.text_description {
  font-size: 30rpx;
  padding: 0 30rpx;
  color: #666;
  text-align: center;
  margin-top: 20rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
  margin-right: 30rpx;
  background-repeat: no-repeat;
  background-position: center;
}

