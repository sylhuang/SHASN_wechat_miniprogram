  background-image: url("data:image/svg+xml;base64,");
}

.icon_cross {
  background-image: url("data:image/svg+xml;base64,");
}

.icon_effect {
  background-image: url("data:image/svg+xml;base64,");
}

.btn_feedback {
  margin-top: 20rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}